<%- include ../partials/header.ejs %>

<!-- Content for the Add_Edit page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h2><%= title %></h2>

            <form class="form" method="POST">
                <div class="form-group">
                    <input type="hidden"
                        name="id"
                        value="<%= survey._id %>"
                    >
                    <label for="surveyTextField">Title</label>
                    <input type="text" class="form-control"
                        id="surveyTextField"
                        placeholder="Enter the Title"
                        name="Title" 
                        value="<%= survey.Title %>"
                        required>
                </div>
                <br />
                <div class="form-group">
                    <label for="surveyTextField">College</label>
                    <input type="text" class="form-control"
                        id="surveyTextField"
                        placeholder="Enter the College Name"
                        name="College" 
                        value="<%= survey.College %>"
                        required>
                </div>
                <br />
                <div class="form-group">
                    <label for="surveyTextField">Program</label>
                    <input type="text" class="form-control"
                        id="surveyTextField"
                        placeholder="Enter the Program you are enrolled in"
                        name="Program" 
                        value="<%= survey.Program %>"
                        required>
                </div>
                <br />
                <div class="form-group">
                    <label for="surveyTextField">Delivery</label>
                    <input type="text" class="form-control"
                        id="surveyTextField"
                        placeholder="Enter the Delivery Mode Online,Offline,Hybrid"
                        name="Delivery" 
                        value="<%= survey.Delivery %>"
                        required>
                </div>
                <br />
                <div class="form-group">
                    <label for="surveyTextField">Complexity</label>
                    <input type="text" class="form-control"
                        id="surveyTextField"
                        placeholder="Enter the Complexity of Exam"
                        name="Complexity" 
                        value="<%= survey.Complexity %>"
                        required>
                </div>
                <br />

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> 
                    Submit
                </button>
                
                <a href="/survey/list" class="btn btn-warning">
                    <i class="fas fa-undo"></i> 
                    Cancel
                </a>

            </form>
        </div>

    </div>
</div>

<%- include ../partials/footer.ejs %>