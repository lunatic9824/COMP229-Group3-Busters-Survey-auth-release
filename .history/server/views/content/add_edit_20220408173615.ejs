<div class="row justify-content-md-center">
    <div class="col-8">
        
        <form method="POST">
            <div class="form-group">
              <label for="partID">Part ID</label>
              <input type="text" class="form-control" id="partID" aria-describedby="partID" 
              name="partID" placeholder="Enter Component Part ID"
              required>
            </div>

            <div class="form-group">
                <label for="name">Component Name</label>
                <input type="text" class="form-control" id="name" aria-describedby="name" 
                name="name" placeholder="Enter Component Name"
                required>
              </div>
              
              <div class="form-group">
                <label for="description">Description</label>
                <textarea class="form-control" id="description" rows="3"
                name="description" placeholder="Enter Component Description" required
                ></textarea>
              </div>
              
              <div class="form-group">
                <label for="price">Price</label>
                <input type="text" class="form-control" id="price" aria-describedby="price" 
                name="price" placeholder="Enter Component Price"
                required>
              </div>
            
            <button type="submit" class="btn btn-primary btn-lg"><i class="fas fa-plus-circle"></i> Add Component</button>
            <a href="/component-list" class="btn btn-warning btn-lg"><i class="fas fa-undo"></i> Cancel</a>
          </form>

    </div>
</div>